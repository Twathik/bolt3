datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator gen {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "./ERD.png"
  theme    = "dark"
}

generator zod {
  provider = "zod-prisma"
  output   = "../src/@zod"
}

generator typegraphql {
  provider = "typegraphql-prisma"
  output   = "../src/@generated"
}

generator zodPrisma {
  provider = "prisma-zod-generator"
  output   = "../src/@zodPrisma"
}

enum Role {
  USER
  ADMIN
}

enum Sexe {
  M
  F
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  userId          String   @unique
  lastName        String?
  firstName       String?
  fullName        String?
  avatarUrl       String?
  role            Role     @default(USER)
  phoneNumbers    String[]
  lastConnection  DateTime @updatedAt
  typesenseApiKey String?

  @@index([role])
}

model Patient {
  id        String   @id @default(uuid())
  lastName  String
  firstName String
  fullName  String
  ddn       DateTime
  sexe      Sexe
  nTel      String[]

  created DateTime @default(now())
  updated DateTime @updatedAt

  deleted Boolean @default(false)

  @@index([sexe])
}
